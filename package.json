{
  "name": "firebase-lerna-boilerplate",
  "version": "0.1.0",
  "description": "a firebase mono repo project",
  "repository": "git@github.com:UriellViana/firebase-lerna-boilerplate.git",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "10"
  },
  "scripts": {
    "firebase": "firebase",
    "deploy": "firebase deploy",
    "deploy:ci": "firebase deploy --non-interactive --force",
    "shell": "firebase functions:shell",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "test:ci": "lerna run test:ci",
    "decide-deployment": "lerna run decide-deployment"
  },
  "devDependencies": {
    "firebase-tools": "8.2.0",
    "husky": "4.2.5",
    "lerna": "3.20.2",
    "lint-staged": "10.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/hosting/src/**/*.{ts,tsx}": [
      "yarn --cwd packages/hosting format:ts --write",
      "yarn --cwd packages/hosting lint:ts --fix",
      "yarn --cwd packages/hosting lint:css --fix"
    ],
    "packages/functions/src/**/*.ts": [
      "yarn --cwd packages/functions format:ts --write",
      "yarn --cwd packages/functions lint:ts --fix"
    ]
  }
}
