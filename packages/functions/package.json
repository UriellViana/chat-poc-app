{
  "name": "functions",
  "main": "lib/index.js",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "10"
  },
  "scripts": {
    "build": "tsc",
    "preserve": "yarn build",
    "preshell": "yarn build",
    "serve": "yarn firebase serve --only functions",
    "shell": "yarn firebase functions:shell",
    "start": "yarn serve",
    "firebase": "yarn --cwd ../.. firebase",
    "deploy": "yarn --cwd ../.. deploy --only functions",
    "logs": "yarn firebase functions:log",
    "lint:ts": "eslint",
    "lint:all:ts": "yarn lint:ts \"src/**/*.ts\"",
    "lint": "yarn lint:all:ts",
    "test": "jest --passWithNoTests --watchAll --silent --coverage",
    "test:ci": "CI=true yarn test --watchAll=false",
    "format:all:ts": "yarn format:ts --check \"src/**/*.ts\"",
    "format:ts": "prettier",
    "format": "yarn format:all:ts"
  },
  "dependencies": {
    "firebase-admin": "9.1.0",
    "firebase-functions": "3.6.1",
    "firebase-tools": "8.7.0",
    "node-fetch": "2.6.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.10",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "firebase-functions-test": "0.2.1",
    "jest": "26.4.0",
    "prettier": "2.0.5",
    "ts-jest": "26.2.0",
    "typescript": "3.9.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "resetMocks": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/sharedObjects.ts",
      "!src/**/constants.ts",
      "!src/**/index.ts",
      "!**/*.json",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text"
    ]
  }
}
